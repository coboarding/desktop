{
  "name": "videochat-llm-app",
  "version": "1.0.0",
  "description": "Aplikacja VideoChat z LLM, TTS i STT",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "electron-log": "^5.0.0",
    "onnxruntime-node": "^1.16.0",
    "node-pty": "^1.0.0",
    "express": "^4.18.2",
    "socket.io": "^4.7.2",
    "node-vad": "^1.1.4",
    "node-webrtc": "^0.1.0",
    "whisper-node": "^0.1.5",
    "pico-tts": "^1.0.0",
    "@novnc/novnc": "^1.4.0",
    "ascii-art": "^2.8.5",
    "blessed": "^0.1.81",
    "blessed-contrib": "^4.11.0",
    "term-animation": "^1.0.2",
    "ws": "^8.13.0"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.6.4",
    "webpack": "^5.88.0",
    "babel-loader": "^9.1.3"
  },
  "build": {
    "appId": "com.example.videochat-llm",
    "productName": "VideoChat LLM",
    "linux": {
      "target": ["AppImage", "deb", "rpm"],
      "category": "VideoConference",
      "extraResources": [
        "models/**/*",
        "kubernetes/**/*",
        "terraform/**/*",
        "ansible/**/*"
